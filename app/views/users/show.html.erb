<h1>My Bots</h1>
<table class='table borderless text-center'>
<% current_user.bots.each do |bot| %>
<tr>
<td><figure><%= image_tag(bot.image.url(:thumb), alt: 'user image') %>
  <figcaption><%= bot.name %> </figcaption>
</figure</td>
<td>
<br>
<%= bot.description %></td>
<td> Rental history:
<br>
<% bot.rentals.each do |rental| %>
Rented by <%= User.find(rental.user_id).email %> on <%= rental.date %>
<% end %>
</td>
<% end %>
</table>
<h1>My Rentals</h1>
<% current_user.rentals.each do |rental| %>
<figure>
<%= image_tag(Bot.find(rental.bot_id).image.url(:thumb)) %>
<figcaption><%= Bot.find(rental.bot_id).name %></figcaption>
</figure>
<%= link_to "Write A Review", edit_rental_path(rental) %>
<br>
<% end %>

<h1>My Favorites</h1>
<% current_user.favorites.each do |favorite| %>
<%= link_to Bot.find(favorite.bot_id).name, bot_path(favorite.bot_id) %>
<br>
<% end %>
